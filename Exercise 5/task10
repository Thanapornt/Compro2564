number = int(input("number for build a diamond :"))

for i in range(0,number):
  for j in range(0,number-i-1):
    print(" ",end="")
  for k in range(0,2*i+1):
    print("*",end="")
  print()
for i in range(number-1,0,-1):
  for j in range(number,i,-1):
    print(" ",end="")
  for k in range(2*i-1,0,-1):
    print("*",end="")
  print()
